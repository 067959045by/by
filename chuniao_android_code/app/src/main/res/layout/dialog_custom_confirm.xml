<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_lin_main"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/selector_stoke_white_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp8"
            android:paddingHorizontal="@dimen/dp16">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@mipmap/icon_dialog_close"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginVertical="@dimen/dp16"/>
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:paddingHorizontal="@dimen/dp16"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Title"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_dialog_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:text="title2"
            android:textColor="#ff323546"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_dialog_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp16"
            android:visibility="gone"
            android:text="0.00 ONLY"
            android:textColor="#ff323546"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:text="content"
            android:autoSizeMaxTextSize="@dimen/sp16"
            android:autoSizeMinTextSize="@dimen/sp14"
            android:padding="@dimen/dp16"
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginBottom="@dimen/dp30"
            android:textSize="@dimen/sp13" />



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/text_cancel"
                android:layout_weight="1"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/sp12"
                android:autoSizeMaxTextSize="@dimen/sp16"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <View
                android:id="@+id/view_dialog_button_divider"
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dialog_tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/sp12"
                android:autoSizeMaxTextSize="@dimen/sp16"
                android:text="@string/text_compare"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>