<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_top_bar"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="@dimen/toolBarHeight"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/include_top_lin_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/include_top_lin_newback"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolBarHeight"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/include_top_iv_back"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="center"
                android:src="@mipmap/icon_toolbar_back" />

        </LinearLayout>
        <!--</RelativeLayout>-->

        <TextView
            android:id="@+id/include_top_tv_title"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/sp18"
            android:autoSizeMinTextSize="@dimen/sp12"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/include_top_lin_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/include_top_iv_right_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/include_top_tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingHorizontal="@dimen/dp8"
                    android:background="@drawable/shape_round_red_25dp"
                    android:layout_gravity="center_vertical"
                    android:text="确定"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>